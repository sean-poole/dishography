<%- include('partials/header-in') -%>

<section class="container mx-auto my-3 p-0"> 
  <div class="displayCard rounded col-lg-7 mx-lg-auto p-4">
    <h2>Edit Recipe: </h2>
    <form action="/profile/<%= user.id %>/editRecipe/<%= recipe.id %>?_method=PUT" enctype="multipart/form-data" method="POST">
      <div class="d-flex flex-column my-4">
        <div class="mb-3">
          <label for="recipeName" class="form-label fw-medium fs-5">Recipe Name: </label>
          <input type="text" class="form-control recipe-input" id="recipeName" name="recipeName" value="<%= recipe.name %>"></input>
        </div>

        <div class="mb-3">
          <label for="recipeDesc" class="form-label fw-medium fs-5">Description: </label>
          <textarea class="form-control recipe-input" id="recipeDesc" name="recipeDesc" maxlength="200" style="height: 90px;"><%= recipe.desc %></textarea>
        </div>

        <div class="mb-3">
          <label for="ingredients" class="form-label fw-medium fs-5">Ingredients: </label>
          <textarea class="form-control recipe-input" id="ingredients" name="ingredients"><%= recipe.ingredients.join("\n") %></textarea>
        </div>

        <div class="mb-3">
          <label for="directions" class="form-label fw-medium fs-5">Directions: </label>
          <textarea class="form-control recipe-input" id="directions" name="directions"><%= recipe.directions.join("\n") %></textarea>
        </div>

        <div class="mb-3">
          <label for="imgUpload" class="form-label fw-medium fs-5">Image: </label>
          <input type="file" class="form-control recipe-input" id="imgUpload" name="file">
        </div>

        <button type="submit" class="btn btn-primary col-10 col-md-5 mx-auto mx-md-0 mt-4 py-2 fw-bolder fs-4 rounded-pill" value="Upload">Submit</button>

      </div>
    </form>
  </div>
</section>

<%- include('partials/footer') -%>